
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Pokemons</h3>
<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3">Novo Pokemon</a>       
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Model.Pokemon pokemon in ViewBag.Pokemons)
        {
            <tr>
                <td>@pokemon.Id</td>
                <td>@pokemon.Categoria.Nome</td>
                <td>@pokemon.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = pokemon.Id})" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Update</a> 

                    <a href="@Url.Action("Delete", new { id = pokemon.Id })" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Delete</a> 
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table> 